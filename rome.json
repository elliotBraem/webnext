{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"ignore": [],
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUndeclaredVariables": "error"
			},
			"style": {
				"noNegationElse": "error",
				"noShoutyConstants": "error",
				"useBlockStatements": "error",
				"useShorthandArrayType": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	}
}